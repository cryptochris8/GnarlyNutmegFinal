{
  "name": "soccer",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun run index.ts",
    "setup": "npm install && echo Setup complete - you can now use bun run start",
    "start:node": "npx tsx index.ts",
    "start:windows": "npx tsx index.ts",
    "dev:windows": "npx tsx --watch index.ts",
    "dev:node": "npx tsx --watch index.ts",
    "install:deps": "npm install",
    "clean:install": "rm -rf node_modules && npm install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^24.1.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@gltf-transform/cli": "^4.2.1",
    "@hytopia.com/assets": "^0.3.16",
    "hytopia": "^0.10.30",
    "mediasoup": "^3.18.0"
  },
  "trustedDependencies": [
    "mediasoup"
  ]
}
